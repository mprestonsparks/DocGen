# DocGen Environment Configuration

# LLM API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/docgen.log

# Session Storage
SESSION_STORAGE_PATH=.sessions

# Template Configuration
TEMPLATE_DIR=docs/_templates
OUTPUT_DIR=docs/generated

# Feature Flags
ENABLE_AI_ENHANCEMENT=true
ENABLE_ADVANCED_VALIDATION=true

# MCP Server Configuration
# Used by the Claude MCP servers in mcp-servers/
MCP_SERVER_PORT=7867
MCP_SERVER_HOST=0.0.0.0

# GitHub API Token (with repo scope)
# Generate a token at https://github.com/settings/tokens with 'repo' scope
# Used by GitHub MCP server and coverage analysis server
GITHUB_TOKEN=your-github-token-here

# GitHub Repository Information
GITHUB_OWNER=mprestonsparks
GITHUB_REPO=DocGen