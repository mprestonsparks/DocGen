# MCP Server Environment Configuration
# Copy this file to .env.mcp and adjust as needed

# Gateway Configuration
MCP_GATEWAY_PORT=8950

# Port Range for MCP Servers
# Servers will be assigned ports from this range
MCP_PORT_RANGE_START=9000
MCP_PORT_RANGE_END=9999

# Server Resource Limits (Default)
MCP_SERVER_CPU_LIMIT=1.0
MCP_SERVER_MEMORY_LIMIT=4G

# Model Configuration
MCP_MODEL_CACHE_DIR=./models

# Logging Configuration
MCP_LOG_LEVEL=info

# Docker Configuration
MCP_SERVER_IMAGE=docgen/mcp-server:latest
